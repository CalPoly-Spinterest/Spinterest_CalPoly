{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "composite": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "outDir": "./dist"
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "exclude": [
    "**/*.json",
    "node_modules",
    "dist",
    "package.json",
    "tsconfig.json",
    "jest.config.js"
  ]
}
