{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "types": ["jest", "node", "supertest"],
    "allowJs": true,
    "resolveJsonModule": true,
    "composite": true,
    "noEmit": false
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "**/*.test.ts"],
  "exclude": ["node_modules", "dist"]
}
